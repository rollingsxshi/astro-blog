---
const { currentPage, totalPages, disablePrev, disableNext } = Astro.props;

interface Props {
  currentPage: number;
  totalPages: number;
  disablePrev: boolean;
  disableNext: boolean;
}
---

<div class="flex justify-between mt-10">
  <a
    href={`/articles?page=${currentPage - 1}`}
    class={disablePrev
      ? "invisible pointer-events-none"
      : "inline-block float-left bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white rounded-lg"}
  >
    Previous
  </a>

  <a
    href={`/articles?page=${currentPage + 1}`}
    class={disableNext
      ? "invisible pointer-events-none"
      : "inline-block float-right bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white rounded-lg"}
  >
    Next
  </a>
</div>
